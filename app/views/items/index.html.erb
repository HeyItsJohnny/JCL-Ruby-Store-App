<p id="notice"><%= notice %></p>
<table class="table">
    <h1>Admin Item List</h1>
    <p class="lead">Admin: Here you can add, delete, view and edit items.</p>
    <br>
    <% @items.each do |item| %>   
    <tr class="<%= cycle('list_line_odd', 'list_line_even')%>">     
        <td>       
            <%= image_tag(item.image) %>     
        </td>     
        <td class="list_description">       
            <dl>         
                <dt><%= item.name %></dt>         
                <dd>           
                    <%= item.description %>           
                    <br><br>           
                    <%= item.price %>         
                </dd>       
            </dl>     
        </td>     
        <td class="list_actions">       
            <%= link_to 'Show', item %>       
            <%= link_to 'Edit', edit_item_path(item) %>       
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>     
        </td>   
    </tr>   
    <% end %> 
</table> 
<br>
<a href="/items/new"><button class="btn btn-lg btn-primary btn-block" type="submit">Add New Items</button></a>